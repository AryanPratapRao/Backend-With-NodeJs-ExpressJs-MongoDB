<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css"/>
</head>
<body>
    <div class="forms">
        <form action="/create" method="post">
            <input type="text" placeholder="enter title...." name="title" class="f1"/><br/>
            <textarea name="data" class="f2" placeholder="enter the data..."></textarea><br/>
            <input type="submit" value="create" class="btn"/>
        </form>
        <div class="tasks">

            <% if(files.length > 0){ %>
                <% files.forEach(function(val){ %>
                    <div class="task">
                        <h3><%= val %></h3>
                        <a href="/file/<%= val %>">Read More</a>
                    </div>
               <% }) %>
            <% } else { %>
                <h3>no task yet.</h3>                     
            <% } %>  
            </div>
        </div>
    </div>
</body>
</html>